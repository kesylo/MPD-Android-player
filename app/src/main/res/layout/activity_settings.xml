<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTextPort"
            android:maxLength="10"
            android:layout_width="129dp"
            android:layout_height="39dp"
            android:layout_weight="2"
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:fontFamily="@font/montserrat_bold" android:textSize="24sp" android:typeface="normal"
            android:textColor="@color/black"
            android:inputType="phone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIP" app:layout_constraintHorizontal_bias="0.09"
    />

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTextIP"
            android:maxLength="16"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="2"
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:fontFamily="@font/montserrat_bold" android:textSize="24sp" android:typeface="normal"
            android:textColor="@color/black"
            android:inputType="phone" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="392dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:onClick="onConnectPressed"
            android:text="Connect"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editTextPort"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp" android:textColor="@color/black" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintBottom_toTopOf="@+id/editTextIP"/>
    <TextView
            android:text="Port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp" android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIP" app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintBottom_toTopOf="@+id/editTextPort"/>
    <ImageView
            android:layout_width="289dp"
            android:layout_height="362dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIP"/>

</android.support.constraint.ConstraintLayout>