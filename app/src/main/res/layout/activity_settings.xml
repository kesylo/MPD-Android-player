<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTextPort"
            android:maxLength="5"
            android:layout_width="129dp"
            android:layout_height="39dp"
            android:layout_weight="2"
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:fontFamily="@font/montserrat_bold" android:textSize="24sp" android:typeface="normal"
            android:textColor="@color/black"
            android:inputType="phone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextIP" app:layout_constraintHorizontal_bias="0.504"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTextIP"
            android:maxLength="5"
            android:layout_width="243dp"
            android:layout_height="44dp"
            android:layout_weight="2"
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:fontFamily="@font/montserrat_bold" android:textSize="24sp" android:typeface="normal"
            android:textColor="@color/black"
            android:inputType="phone" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnConnect"
            android:layout_width="254dp"
            android:layout_height="58dp"
            android:onClick="onConnectPressed"
            android:text="Connect"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="160dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.566" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPort"/>

</android.support.constraint.ConstraintLayout>