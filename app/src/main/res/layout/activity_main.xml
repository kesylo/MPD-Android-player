<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".MainActivity">




    <TextView
            android:text="@string/Nowplaying"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAppTitle" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Banana Brain"
            android:textSize="31dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/musicTiltle"
            app:layout_constraintTop_toBottomOf="@+id/gifImage" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.503"/>
    <TextView
            android:text="Live Streaming"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveStreamTxt"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:id="@+id/volumeText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/musicTiltle" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnSettings"
            android:layout_width="@dimen/custombutton"
            android:background="@drawable/btnsettings"
            android:layout_height="@dimen/custombutton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:onClick="onSettingsClick"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/txtAppTitle"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.102"/>

    <Button
            android:id="@+id/btnPrevious"
            android:layout_width="55dp"
            android:background="@drawable/btnprevious"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/btnPlay"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/liveStreamTxt"
            android:onClick="onPreviousClick"/>
    <Button
            android:id="@+id/btnNext"
            android:layout_width="55dp"
            android:background="@drawable/btnnext"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toEndOf="@+id/btnPlay"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/liveStreamTxt"
            android:onClick="onNextClick"/>
    <Button
            android:id="@+id/btnSearch"
            android:layout_width="@dimen/custombutton"
            android:background="@drawable/btnsearch"
            android:layout_height="@dimen/custombutton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtAppTitle" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.897"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/musicTiltle" android:layout_marginTop="8dp" android:max="100"
            app:layout_constraintEnd_toStartOf="@+id/volumeText"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/play"
            android:id="@+id/btnPlay"
            android:onClick="onPlayPauseClick"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/liveStreamTxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <pl.droidsonroids.gif.GifImageView
            android:layout_width="217dp"
            android:layout_height="217dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintTop_toBottomOf="@+id/txtAppTitle"
            android:id="@+id/gifImage" android:layout_marginTop="24dp"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnlistMusic"
            android:layout_width="277dp"
            android:layout_height="58dp"
            android:text="List of music"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlay"
            android:onClick="onPlayPauseClick"/>


</android.support.constraint.ConstraintLayout>

